
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/LayoutAD/AdinLayout.cshtml";
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 5);
}
@Html.ActionLink("Thêm sản phẩm", "TaoMoi", null, new { @class = "btn btn-success" })
<br />
@*Thể hiện dữ liệu thông qua control webgrid*@
@grid.GetHtml(
    tableStyle: "table table-striped table-bordered table-hover divTable",
    headerStyle: "gridHead",
    footerStyle: "gridFooter",
    rowStyle: "gridRow",
    alternatingRowStyle: "GridAltRow",
    columns: grid.Columns(
    grid.Column("MaSP", "Mã SP"),
    grid.Column("TenSP", "Tên SP"),
    grid.Column("MoTa", "Mô tả", format: p => @Html.Raw(p.MoTa)),
    grid.Column("HinhAnh", "Hình ảnh", format: p => @Html.Raw("<img width=\"150\" height=\"150\" src=\"../../Content/HinhAnhSP/" + p.HinhAnh + "\">")),
    //grid.Column("NgayCapNhat", "Ngày Cập Nhật"),
    grid.Column(format: p => @Html.ActionLink("Chỉnh sửa", "ChinhSua", new { id = p.MaSP  }, new { @class = "btn btn-primary" })),
    grid.Column(format: p => @Html.ActionLink("Xóa", "Xoa", new { id = p.MaSP} ,new {  @class = "btn btn-info" }))

    ))
