@using WepSiteBanHang.Models
@model IEnumerable<SANPHAM>





<div class="product-one">
    <div style="float:left;width:100%;display:inline-block;">
       

        @foreach (var item in Model.Take(9))
        {
            <div class="col-md-3 product-left " style="padding:1px;margin:10px">
                <div class="product-main simpleCart_shelfItem  wow slideInLeft">
                    <a href="@Url.Action("XemChiTiet","SanPham",new { id=item.MASP})" class="mask"  onclick="move()"><img class="img-responsive zoom-img" src="@Url.Content("~/Content/HinhAnhSP/"+item.HINHANH)" style="width:150px;height:150px" alt=""></a>
                    <div class="product-bottom">
                        <h3 style="height:30px;overflow:hidden">@item.TENSP</h3>

                        <h4><a class="item_add" href="#"><i>Giá</i></a> <span class="item_price">@item.DONGIA.Value.ToString("#,##") VNĐ</span></h4>
                        <a style="margin:1% 30% 0;" onclick="AddToCart('@item.MASP')" class="btn hvr-radial-in"><strong>Thêm Vào Giỏ</strong></a>
                    </div>
                    <div class="srch">
                       
                    </div>
                </div>
            </div>
        }
        @Html.Action("T10Theodoi", "SanPham")


    </div>
    <div style="clear:both"></div>
</div>

   
